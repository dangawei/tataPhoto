<style>
    *{
        margin:0;
        padding:0;
    }
    .container .logo{
        width:100%;
        margin:30px 0;
        text-align: center;
    }
    .container .logo img{
        height:41px;
    }
    .container .video{
        width: 100%;
        margin:40px 0;
    }
    .container .video img{
        height:41px;
    }
    .container .allvideo ul{
        list-style: none;
        margin-bottom:200px;
    }
    .container .allvideo ul li{
        width:920px;
        margin-top:40px;
        border-bottom:1px dashed #ccc;
    }
    .container .allvideo ul li a h2{
        color: black;
        /*font-weight: block;*/
    }
    .container .allvideo ul li .videoPicture{
        width: 100%;
        height: 380px;
        border:1px solid #ccc;
        position: relative;
        margin-top:40px;
    }
    .container .allvideo ul li .videoPicture a{
        display: block;
        width:100%;
        height: 100%;
    }
    .container .allvideo ul li .videoPicture a .videoIco{
        width:100%;
        height:100%;
    }
    .container .allvideo ul li .videoPicture a .videoButton{
        width: 100px;
        height: 100px;
        position: absolute;
        left:50%;
        top:50%;
        margin-left: -50px;
        margin-top: -50px;
    }
    .container .allvideo ul li .c_mark{
        margin-top: 10px;
    }
</style>
<div class="container" style="width: 1004px;">
    <div class="logo">
        <img src="/images/video/Section14.gif" alt="">
    </div>
    <div class="video">
        <img src="/images/video/Section14_01.gif" alt="">
    </div>
    <div class="allvideo">
        <ul>
            {{#each message}}
            <li >
                <a href="#"><h2>{{name}}</h2></a>
                <div class="videoPicture">
                    <a href="{{video}}">
                        <img src="/images/video/videoButton.png" alt="" class="videoButton">
                        <img class="videoIco" src="{{img}}" />
                    </a>
                </div>
                <p class="c_mark">洛阳他她影视出品</p>
            </li>
            {{/each}}
        </ul>
    </div>
</div>
